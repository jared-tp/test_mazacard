<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IMJU - Búsqueda</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: white;
      color: #691c32;
      font-family: Arial, sans-serif;
    }
    .container-box {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 2rem;
      background-color: #f8f9fa;
      border: 2px solid #691c32;
      border-radius: 1rem;
    }
    .btn-custom {
      background-color: #691c32;
      color: white;
      border: none;
    }
    .btn-custom:hover {
      background-color: #500f23;
    }
    .logo-imju {
      display: block;
      margin: 0 auto 1.5rem auto;
      max-width: 450px;
    }
    .clickable-row {
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .clickable-row:hover {
      background-color: #f0f0f0;
    }
    .search-box {
      margin-bottom: 1rem;
    }
    .table-responsive {
      max-height: 600px;
      overflow-y: auto;
    }
    thead th {
      position: sticky;
      top: 0;
      background-color: #691c32;
      color: white;
      z-index: 10;
    }
    .search-container {
      display: flex;
      justify-content: center;
      margin-bottom: 1.5rem;
    }
    .search-input-container {
      width: 70%;
      margin-right: 1rem;
    }
    .buttons-container {
      display: flex;
      justify-content: center;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }
  </style>
</head>
<body>
<div class="container-box text-center">
  <img src="/img/IMJU Logo_2.png" alt="Logo IMJU" class="logo-imju">
 
  <% if (usuario) { %>
    <div class="text-end mb-3">
        <small class="text-muted">Bienvenido, <%= usuario.username %> | 
        <a href="/logout" class="text-danger">Cerrar sesión</a></small>
    </div>
  <% } %>
  
  <form id="formBusqueda" action="/buscar" method="GET">
    <div class="search-container">
      <div class="search-input-container">
        <input type="text" name="busqueda" id="nombreBusqueda" class="form-control" 
               placeholder="Buscar por nombre o CURP..." value="<%= busqueda || '' %>">
      </div>
      <button type="submit" class="btn btn-custom" style="width: 120px;">Buscar</button>
    </div>
    
    <div class="buttons-container">
      <a href="/consulta" class="btn btn-custom" style="width: 180px;">Agregar nuevo</a>
    </div>
  </form>

  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>CURP</th>
          <th>Folio</th>
          <th>Teléfono</th>
          <th>Fecha Alta</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody id="tablaUsuarios">
        <% if (registros && registros.length > 0) { %>
          <% registros.forEach(persona => { %>
            <tr class="clickable-row" data-id="<%= persona.id %>">
              <td>
                <a href="/consulta?id=<%= persona.id %>" class="text-decoration-none text-dark">
                  <%= persona.nombre %>
                  <% if (persona.apellido_paterno) { %> <%= persona.apellido_paterno %> <% } %>
                  <% if (persona.apellido_materno) { %> <%= persona.apellido_materno %> <% } %>
                </a>
              </td>
              <td><%= persona.curp %></td>
              <td><%= persona.folio %></td>
              <td><%= persona.telefono %></td>
              <td>
                <% if (persona.fecha_expedicion) { %>
                  <%= new Date(persona.fecha_expedicion).toLocaleDateString('es-MX') %>
                <% } %>
              </td>
              <td>
                <a href="/consulta?id=<%= persona.id %>" class="btn btn-sm btn-outline-primary">Editar</a>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="6" class="text-center py-4">No se encontraron registros</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <% if (totalPaginas > 1) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% if (paginaActual > 1) { %>
          <li class="page-item">
            <a class="page-link" href="/buscar?pagina=<%= paginaActual-1 %><%= busqueda ? '&busqueda=' + busqueda : '' %>">Anterior</a>
          </li>
        <% } %>
        
        <% for (let i = 1; i <= totalPaginas; i++) { %>
          <li class="page-item <%= i === paginaActual ? 'active' : '' %>">
            <a class="page-link" href="/buscar?pagina=<%= i %><%= busqueda ? '&busqueda=' + busqueda : '' %>">
              <%= i %>
            </a>
          </li>
        <% } %>
        
        <% if (paginaActual < totalPaginas) { %>
          <li class="page-item">
            <a class="page-link" href="/buscar?pagina=<%= paginaActual+1 %><%= busqueda ? '&busqueda=' + busqueda : '' %>">Siguiente</a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  document.querySelectorAll('.clickable-row').forEach(row => {
    row.addEventListener('click', (e) => {
      if (e.target.tagName !== 'A' && e.target.parentElement.tagName !== 'A') {
        const id = row.getAttribute('data-id');
        window.location.href = `/consulta?id=${id}`;
      }
    });
  });

  document.getElementById('nombreBusqueda').addEventListener('input', function(e) {
    const searchTerm = e.target.value.toLowerCase();
    const rows = document.querySelectorAll('#tablaUsuarios tr');
    
    rows.forEach(row => {
      const nameCell = row.querySelector('td:first-child');
      if (nameCell) {
        const name = nameCell.textContent.toLowerCase();
        row.style.display = name.includes(searchTerm) ? '' : 'none';
      }
    });
  });
</script>
</body>
</html>