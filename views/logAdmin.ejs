<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>IMJU - Registros de Actividad</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background-color: white;
      color: #691c32;
      font-family: Arial, sans-serif;
    }
    .container-box {
      max-width: 1200px;
      margin: 1rem auto;
      padding: 1.5rem;
      background-color: #f8f9fa;
      border: 2px solid #691c32;
      border-radius: 1rem;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .btn-custom {
      background-color: #691c32;
      color: white;
      border: none;
    }
    .btn-custom:hover {
      background-color: #500f23;
    }
    .logo-imju {
      display: block;
      margin: 0 auto 1rem auto;
      max-width: 100%;
      height: auto;
    }
    thead th {
      position: sticky;
      top: 0;
      background-color: #691c32;
      color: white;
      z-index: 10;
      font-size: 0.9rem;
    }
    .table-responsive {
      max-height: 600px;
      overflow-y: auto;
    }
    .admin-info {
      font-size: 0.9rem;
    }
    
    @media (max-width: 768px) {
      .container-box {
        margin: 0.5rem auto;
        padding: 1rem;
        border-radius: 0.75rem;
      }
      .logo-imju {
        max-width: 250px;
        margin-bottom: 0.75rem;
      }
      h3 {
        font-size: 1.25rem;
      }
      .form-filter .row {
        flex-direction: column;
        gap: 0.5rem;
      }
      .form-filter .col {
        width: 100%;
      }
      .form-filter button {
        width: 100%;
      }
      table {
        font-size: 0.85rem;
      }
      thead th {
        font-size: 0.8rem;
        padding: 0.5rem;
      }
      tbody td {
        padding: 0.5rem;
      }
      .btn-custom {
        margin-bottom: 0.5rem;
        width: 100%;
      }
      .admin-info {
        text-align: center !important;
        margin-bottom: 1rem;
      }
    }
  </style>
</head>
<body>
  <div class="container-box">
    <img src="/img/IMJU Logo_2.png" alt="Logo IMJU" class="logo-imju"/>

    <% if (usuario) { %>
      <div class="text-end mb-3 admin-info">
        <small class="text-muted">Administrador: <%= usuario.username %> |
          <a href="/logout" class="text-danger">Cerrar sesión</a></small>
      </div>
    <% } %>

    <h3 class="mb-4">Historial de Actividad</h3>

    <form method="GET" action="/logAdmin" class="mb-3 form-filter">
      <div class="row">
        <div class="col">
          <label for="usuario_id">Filtrar por usuario:</label>
          <select name="usuario_id" class="form-control">
            <option value="">Todos</option>
            <% usuarios.forEach(u => { %>
              <option value="<%= u.id %>" <%= u.id == filtroUsuario ? 'selected' : '' %>>
                <%= u.username %>
              </option>
            <% }); %>
          </select>
        </div>

        <div class="col">
          <label for="fecha">Filtrar por fecha:</label>
          <input type="date" name="fecha" class="form-control" value="<%= filtroFecha %>">
        </div>

        <div class="col d-flex align-items-end">
          <button type="submit" class="btn btn-custom">Filtrar</button>
        </div>
      </div>
    </form>  

    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>Usuario</th>
            <th>Rol</th>
            <th>Acción</th>
            <th>Fecha y Hora</th>
            <th>Detalles</th>
          </tr>
        </thead>

        <tbody>
          <% if (logs && logs.length > 0) { %>
            <% logs.forEach(log => { %>
              <tr>
                <td><%= log.username %></td>
                <td><%= log.rol %></td>
                <td><%= log.accion %></td>
                <td><%= new Date(log.fecha).toLocaleString('es-MX') %></td>
                <td><%= log.descripcion || '—' %></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="text-center py-4">No hay registros de actividad.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>

    <div class="d-flex flex-column flex-md-row gap-2 justify-content-center mt-3">
      <a href="/panelAdmin" class="btn btn-custom">Volver al panel</a>
      <a href="/buscar" class="btn btn-custom">Regresar al inicio</a>
    </div>
  </div>
</body>
</html>